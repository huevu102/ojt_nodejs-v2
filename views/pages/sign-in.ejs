<!DOCTYPE html>
<html lang="en">
	<%- include('../partials/head') %>

	<body>
		<!-- main -->
		<main>
			<div class="container mt-5">
				<div class="row">
					<div class="col-3"></div>
					<div class="col-6">
						<% if (message) { %>
						<div style="color: red">
								<%=message%>
						</div>
						<% } %>
						<form action="/sign-in" method="POST">
							<div class="form-group mt-3">
								<label for="exampleInputEmail1">Email address</label>
								<input type="email" class="form-control" id="email" aria-describedby="emailHelp"
										placeholder="Enter email" name="email" value="<%=user.email%>" required>
							</div>
							<div class="form-group mt-3">
								<label for="exampleInputPassword1">Password</label>
								<input type="password" class="form-control" id="password" placeholder="Password"
										name="password" value="<%=user.password%>" required>
							</div>
							<div class="form-group mt-3">
								<label for="exampleInputPassword1">GA Code</label>
								<input type="text" class="form-control" id="gaCode"
										placeholder="Google Authentication Code" name="gaCode">
							</div>
							<div class="form-group form-check mt-3">
								<input type="checkbox" class="form-check-input" id="exampleCheck1">
								<label class="form-check-label" for="exampleCheck1">Remember me</label>
							</div>
							<div class="mt-3">
								<button id="signin" type="submit" class="btn btn-primary">Sign in</button>
								<a href="/sign-up">Do not have account, SIGN UP now?</a>
							</div>
						</form>
					</div>
					<div class="col-3"></div>
				</div>
			</div>
		</main>
	</body>
</html>