<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %>

    <body>
        <!-- main -->
        <main>
            <div class="container mt-5">
                <div class="row">
                    <div class="col-3"></div>
                    <div class="col-6">
                        <% if (message) { %>
                            <div style="color: red">
                                <%=message%>
                            </div>
                        <% } %>
                        <form action="/sign-up" method="POST">
                            <div class="form-group mt-3">
                                <label for="exampleInputName1">Name</label>
                                <input type="text" class="form-control" aria-describedby="emailHelp"
                                    placeholder="Enter your name" name="name" value="<%=user.name%>" required>
                            </div>
                            <div class="form-group mt-3">
                                <label for="exampleInputEmail1">Email address</label>
                                <input type="email" class="form-control" id="exampleInputEmail1"
                                    aria-describedby="emailHelp" placeholder="Enter email" name="email" value="<%=user.email%>" required>
                                <small id="emailHelp" class="form-text text-muted">We'll never share your email with
                                    anyone
                                    else.</small>
                            </div>
                            <div class="form-group mt-3">
                                <label for="exampleInputPassword1">Password</label>
                                <input type="password" class="form-control" id="exampleInputPassword1"
                                    placeholder="Password" name="password" required>
                            </div>
                            <div class="form-group form-check mt-3">
                                <input type="checkbox" class="form-check-input" id="termAndCondition" required onclick="onTermUpdated();">
                                <label class="form-check-label" for="exampleCheck1">Agree to Terms and Conditions</label>
                            </div>
                            <a href="#"><small id="emailHelp" class="form-text text-muted">Terms and
                                    Conditions</small></a>
                            <div class="mt-3">
                                <div class="d-flex justify-content-center">
                                    <button type="submit" id="userSignup" class="btn btn-primary" disabled>Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-3"></div>
                </div>
            </div>
        </main>
    </body>
    <script>
        function onTermUpdated() {
            if ($('#termAndCondition').is(":checked")) {
                $("#userSignup").removeAttr("disabled");
            } else {
                $("#userSignup").attr("disabled", "");
            }
        }
    </script>
</html>